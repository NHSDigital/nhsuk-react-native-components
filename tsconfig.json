{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "target": "ES6",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": [
      "react",
      "node"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/__mocks__",
    "src/setupTests.ts"
  ]
}
