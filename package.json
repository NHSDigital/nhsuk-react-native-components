{
  "name": "nhsuk-react-native-components",
  "version": "0.0.7-dev.0",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/NHSDigital/nhsuk-react-native-components",
  "author": "NHSBT and NHSDigital",
  "license": "MIT",
  "scripts": {
    "cleanup": "rm -rf dist/ > /dev/null && rm -rf lib/ > /dev/null",
    "build:dist": "rollup -c",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir lib",
    "build:lib": "NODE_ENV=production babel src --out-dir lib --extensions \".ts,.tsx\" --ignore \"**/__tests__,**/__mocks__,**/setupTests.ts\"",
    "build": "yarn cleanup && yarn build:dist && yarn build:lib && yarn build:types",
    "test": "jest",
    "test:ci": "jest --coverage --passWithNoTests",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:ci": "eslint src --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "yarn lint:ci && yarn test:ci"
  },
  "dependencies": {
    "colord": "^2.9.2"
  },
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.2",
    "@react-native-community/eslint-config": "^3.0.1",
    "@types/color": "^3.0.2",
    "@types/react-native": "^0.66.3",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-native": "^0.66.2",
    "react-native-picker-select": "^8.0.4",
    "react-native-svg": "^12.1.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-native": ">=0.66",
    "react-native-picker-select": "^8.0.4",
    "react-native-svg": "^12.1.1"
  },
  "resolutions": {
    "react": "17.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/typescript",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-numeric-separator",
      [
        "@babel/proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/proposal-object-rest-spread",
      [
        "@babel/plugin-proposal-private-property-in-object",
        {
          "loose": true
        }
      ],
      [
        "@babel/plugin-proposal-private-methods",
        {
          "loose": true
        }
      ]
    ],
    "sourceMaps": "inline"
  },
  "eslintConfig": {
    "extends": "@react-native-community",
    "globals": {
      "NodeJS": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true
  },
  "prettier": {
    "bracketSameLine": true,
    "endOfLine": "auto",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
